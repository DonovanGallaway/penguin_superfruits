{%layout 'layout.liquid'%}
{%block content%}

<article>

    <h2>{{fruit.name}} - 

        {%if fruit.readyToEat%}
        Ready to Eat
        {%else%}
        Not Ready to Eat
        {%endif%}
        
    </h2>
    <h3>{{fruit.color}}</h3>
    <a href="/fruits/{{fruit._id}}/edit"><button>Edit {{fruit.name}}</button></a>
    <form action="/fruits/{{ fruit._id }}?_method=DELETE" method="post">
    <input type="submit" value="Delete {{fruit.name}}">
    </form>
    <a href='/fruits'><button>Back to Index</button></a>


</article>


{%endblock%}